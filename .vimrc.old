syntax on
set ai
set number
set hlsearch
set ruler
set paste
highlight Comment ctermfg=green

set t_Co=256
set t_AB=m
set t_AF=m
if &term =~ '256color'
    set t_ut=
endif

syntax on
set tabstop=8 softtabstop=2 noexpandtab shiftwidth=2

:map <C-t> :TagbarToggle
:map <C-m> :NERDTree
:map <C-x> :NERDTreeClose
:set term=xterm-256color
:set laststatus=2 
:colorscheme koehler 
 noremap  <Up> ""
 noremap! <Up> <Esc>
 noremap  <Down> ""
 noremap! <Down> <Esc>
 noremap  <Left> ""
 noremap! <Left> <Esc>
 noremap  <Right> ""
 noremap! <Right> <Esc>
